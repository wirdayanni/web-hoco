generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admin {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}

model Menu {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  image       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Event {
  id               Int          @id @default(autoincrement())
  title            String
  shortDescription String       @db.VarChar(255)
  description      String       @db.Text
  date             DateTime
  image            String?      // optional legacy cover (boleh tetap ada)
  status           Boolean      @default(true)
  location         Location?    @relation(fields: [locationId], references: [id])
  locationId       Int?
  customLocation   String?      @db.VarChar(255) // lokasi bebas (di luar HOCO)
  images           EventImage[] // relation ke banyak gambar
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
}

model EventImage {
  id      Int    @id @default(autoincrement())
  url     String
  event   Event  @relation(fields: [eventId], references: [id])
  eventId Int
}

model Location {
  id      Int     @id @default(autoincrement())
  name    String
  address String?
  events  Event[]
}

model Reservation {
  id          Int      @id @default(autoincrement())
  code        String   @unique
  branch      String
  type        String   
  room        String
  date        DateTime
  time        String   
  people      Int
  eventName   String?  
  notes       String?
  name        String
  phone       String
  status      String   @default("pending")
  createdAt   DateTime @default(now())
}